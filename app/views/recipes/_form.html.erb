<%= render 'shared/errors', obj: @recipe %>

<div class="container-fluid h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-6">
        <div class="card my-3 shadow-lg p-3 mb-5 rounded">
          <div class="card-body">
              <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <div class="form-group form-label-group">
                  <div class="control-label col-2">
                    <%= f.label :name %>
                  </div>
                  <div class="col-12">
                    <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
                  </div>
                </div>
                <div class="form-group form-label-group">
                  <div class="control-label col-2">
                    <%= f.label :description %>
                  </div>
                  <div class="col-12">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
                  </div>
                </div>
                <div class="form-group form-label-group">
                  <div class="col-md-offset-2 col-md-10">
                    <%= f.submit class: "btn btn-success btn-sm spcBtn2" %>
                    <%= link_to "Return to Recipes", recipes_path, class: 'btn btn-outline-info btn-sm' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
</div>